    <script>
        let cartItems = [];

        function openProductPage(name, description, price, rating, images) {
            document.getElementById("detail-name").innerText = name;
            document.getElementById("detail-description").innerText = description;
            document.getElementById("detail-price").innerText = `$${price.toFixed(2)}`;

            // Clear previous ratings
            const ratingDiv = document.getElementById("detail-rating");
            ratingDiv.innerHTML = '';

            // Set rating
            const stars = Math.round(rating);
            for (let i = 0; i < 5; i++) {
                const star = document.createElement("span");
                star.innerHTML = i < stars ? "★" : "☆";
                ratingDiv.appendChild(star);
            }

            document.getElementById("detail-image").src = images[0];

            // Populate thumbnail gallery
            const thumbnailGallery = document.getElementById("thumbnail-gallery");
            thumbnailGallery.innerHTML = '';
            images.forEach((img, index) => {
                const thumbnail = document.createElement("img");
                thumbnail.src = img;
                thumbnail.onclick = () => {
                    document.getElementById("detail-image").src = img;
                };
                thumbnailGallery.appendChild(thumbnail);
            });

            document.getElementById("product-detail").style.display = "flex";
        }

        function closeProductPage() {
            document.getElementById("product-detail").style.display = "none";
        }

        function addToCart() {
            const name = document.getElementById("detail-name").innerText;
            cartItems.push(name);
            updateCart();
            closeProductPage();
        }

        function updateCart() {
            const cart = document.getElementById("cart");
            const cartCount = document.getElementById("cart-count");
            const cartItemsList = document.getElementById("cart-items");

            cartCount.innerText = cartItems.length;
            cartItemsList.innerHTML = cartItems.map(item => `<div>${item}</div>`).join('');

            cart.classList.toggle('show', cartItems.length > 0);
        }

        function checkout() {
            alert('Proceeding to checkout...');
        }

        function filterProducts() {
            const searchValue = document.getElementById("search").value.toLowerCase();
            const productCards = document.querySelectorAll('.product-card');

            productCards.forEach(product => {
                const productName = product.querySelector('h4').innerText.toLowerCase();
                if (productName.includes(searchValue)) {
                    product.style.display = "block";
                } else {
                    product.style.display = "none";
                }
            });
        }
    </script>

